<%= render 'prison/dashboards/navigation' %>
<%= render 'prison/dashboards/prison_switcher' %>
<% content_for :header do %>
  <%= t('print_visits_title', scope: :shared) %>
<% end %>

<%= render 'visit_date' %>

<% if !@submitted_date.nil? && !@print_visits.valid? %>
  <p class="error-message"><%= t('search_date_invalid_html', scope: [:print_visits, :errors], url: new_prison_feedback_path) %></p>
<% end -%>

<% if !@submitted_date.nil? && !@print_visits.valid? %>
  <p class="error-message"><%= t('search_date_invalid_html', scope: [:print_visits, :errors], url: new_prison_feedback_path) %></p>
<% end -%>

<% if !@submitted_date.nil? && @data.any? %>
  <%= render 'prison/dashboards/print_visits' %>
<% end -%>

<% if !@submitted_date.nil? && !@data.any? %>
  <p class="lede"><%= t('.no_visits', date: @submitted_date.to_s(:short_nomis)) %></p>
<% end -%>

<% if @submitted_date.nil? %>
  <p class="lede"><%= t('.search_list') %></p>
<% end -%>
