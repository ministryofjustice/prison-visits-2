<h2 class="heading-large">Latest booking requests</h2>

<table>
  <caption class="visuallyhidden">Visit inbox</caption>
  <thead>
    <tr>
      <th class="" scope="col">Prisoner No.</th>
      <th scope="col">Prisoner Name</th>
      <th class="" scope="col">Visit Date</th>
      <th class="" scope="col">Time slot</th>
      <th scope="col">Lead Visitor</th>
      <th scope="col">Tel.</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @requested_visits.each do |visit| %>
      <tr>
        <td><%= visit.prisoner_number %></td>
        <td><%= visit.prisoner_full_name %></td>
        <td class=""><%= visit.slots.first.to_date %></td>
        <td class=""><%= format_slot_times(visit.slots.first) %></td>
        <td><%= visit.visitor_full_name %></td>
        <td><%= visit.contact_phone_no %></td>
        <td><a href="javascript: void(0);" class="">View Booking</a></td>
      </tr>
    <% end %>
  </tbody>
</table>

