<table>
  <%= form_for @slot_day, url: prison_recurring_slots_path(params[:locale], @prison), method: :post do |form| %>
    <%= form.hidden_field :day %>
    <tr>
      <td>Start Date</td>
      <td><%= form.gov_uk_date_field(:start_date) %></td>
    </tr>
    <tr>
      <td>End Date</td>
      <td><%= form.gov_uk_date_field(:end_date) %></td>
    </tr>

    <tr>
      <td colspan="2"><%= form.submit 'Save' %></td>
    </tr>
  <% end %>
</table>
