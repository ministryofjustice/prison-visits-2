<%= render 'metrics/content_for_head' %>

<h2 class="heading-medium">
  <%= t('.processing_turnaround_time_for', prison_name: @prison.name) %>
</h2>

<%= link_to t('.processing_turnaround_times_link'), metrics_processing_times_path %>

<%= content_tag :div, '', { class: 'js-Metrics',              data: { percentiles: @metrics_presenter.percentiles_by_day_for(@prison) } } %>
<%= content_tag :div, '', { class: 'js-VisitsCounts',         data: { visit_counts: @metrics_presenter.visits_per_processing_state_for(@prison) } } %>
<%= content_tag :div, '', { class: 'js-TimelyVisitsCount',    data: { visit_counts: @metrics_presenter.timely_and_overdue_for(@prison) } } %>
<%= content_tag :div, '', { class: 'js-RejectionPercentages', data: { rejections_percentages: @metrics_presenter.rejection_percentages_for(@prison) } } %>
